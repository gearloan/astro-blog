---
import Layout from "../../layouts/Layout.astro";
---

<Layout section="instruction" >

 <!-- Hero -->
    <section class="relative isolate">
      <div class="absolute inset-0 -z-10 bg-gradient-to-b from-sky-50 to-white"></div>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-16 pb-10 lg:pt-24 lg:pb-16">
        <div class="max-w-3xl">
          <p class="text-sm font-medium text-sky-600">Train with confidence</p>
          <h1 class="mt-2 text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
            What would you like to learn?
          </h1>
          <p class="mt-4 text-lg leading-8 text-slate-600">
            Search expert‑led aviation courses for pilots of all levels — from PPL to IFR and beyond.
          </p>

          <!-- Search -->
          <form action="/search" method="GET" class="mt-8">
            <label for="q" class="sr-only">What would you like to learn?</label>
            <div class="flex items-center gap-2 rounded-2xl border border-slate-200 bg-white p-2 shadow-sm focus-within:ring-2 focus-within:ring-sky-500">
              <svg class="size-5 shrink-0 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
              <input id="q" name="q" type="search" placeholder="What would you like to learn?" class="w-full bg-transparent px-1 py-2 text-base outline-none placeholder:text-slate-400" />
              <button type="submit" class="rounded-xl bg-sky-600 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-700">Search</button>
            </div>
          </form>

          <!-- Quick categories -->
          <div class="mt-6 flex flex-wrap gap-2">
            {['PPL','IFR','Night Flying','Flight Planning','Aerodynamics','Weather','Comms','Cross-country'].map((c) => (
              <a href={`/search?q=${encodeURIComponent(c)}`} class="group inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1.5 text-sm hover:border-sky-300 hover:bg-sky-50">
                <span class="h-2 w-2 rounded-full bg-sky-500 group-hover:bg-sky-600"></span>
                <span>{c}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Topics / Collections -->
    <section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-12">
      <h2 class="text-2xl font-semibold text-slate-900">Popular topics</h2>
      <div class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
        {[
          { t: 'Private Pilot License', c: 'Your first step into aviation', k: 'ppl' },
          { t: 'Instrument Rating', c: 'Fly confidently in all weather', k: 'ifr' },
          { t: 'Aerodynamics', c: 'Understand how planes fly', k: 'aero' },
          { t: 'ATC Communication', c: 'Talk like a pro to Air Traffic Control', k: 'comms' },
          { t: 'Aviation Weather', c: 'Decode METARs, TAFs, and forecasts', k: 'weather' },
          { t: 'Flight Planning', c: 'Chart courses, fuel, and performance', k: 'planning' },
          { t: 'Night Flying', c: 'Skills, prep, and safety after dark', k: 'night' },
          { t: 'Preflight & Checklists', c: 'Standard procedures and safety culture', k: 'preflight' },
        ].map((x) => (
          <a href={`/collections/${x.k}`} class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm transition hover:shadow-md">
            <div class="flex items-start justify-between">
              <h3 class="text-base font-semibold text-slate-900">{x.t}</h3>
              <svg class="size-5 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </div>
            <p class="mt-1 text-sm text-slate-600">{x.c}</p>
          </a>
        ))}
      </div>
    </section>
    
</Layout>