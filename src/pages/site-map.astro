---
import SitemapCard from '../components/SitemapCard.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="max-w-7xl mx-auto px-6 py-12">
    <h1 class="text-3xl font-heading mb-8">Site Map</h1>

    <section class="mb-16">
      <h2 class="text-xl font-subheading mb-4">Editorial</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <SitemapCard name="Home" route="/editorial/home" />
        <SitemapCard name="Article" route="/editorial/article" />
        <SitemapCard name="Article + Right Rail" route="/editorial/article-rr" />
        <SitemapCard name="Feature" route="/editorial/feature" />
      </div>
    </section>

    <section>
      <h2 class="text-xl font-subheading mb-4">Magazine</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <SitemapCard name="Home" route="/magazine/home" />
        <SitemapCard name="Issue" route="/magazine/issue" />
        <SitemapCard name="Article" route="/magazine/article" />
        <SitemapCard name="Article + Right Rail" route="/magazine/article-rr" />
        <SitemapCard name="Feature" route="/magazine/feature" />
      </div>
    </section>
  </main>
</Layout>

