---
// src/pages/magazine/[slug].astro
import Layout from '../../layouts/Layout.astro';
import { fetchPosts } from '../../lib/fetchPosts.js';

const posts = await fetchPosts();
const leadStory = posts[0];
const featuredStories = posts.slice(1, 3);

const { proseStyle = 'prose-magazine' } = Astro.props;
---
<Layout section="magazine">
  <div class={`grid grid-cols-1 md:grid-cols-[250px_1fr] min-h-screen ${proseStyle}`}>
    <!-- Left sidebar -->
    <aside class="bg-gray-100 p-6 flex flex-col items-center text-center">
      <img src="/logo.svg" alt="AOPA Logo" class="mb-4" />
      <div class="text-xs uppercase tracking-widest text-pink-500 mb-2">Pilot Magazine</div>
      <div class="text-xs">Oct 2025 | No. 178</div>
      <img src="/path-to-cover.jpg" alt="Issue Cover" class="mt-6 w-full" />
    </aside>

    <!-- Main content -->
    <section class="bg-black text-white p-6">
      <!-- Hero -->
      <div class="mb-12">
        <!--hero story -->
        <article>
            <img
                src={leadStory.featuredImage?.node?.sourceUrl}
                alt={leadStory.title}
                class="w-full h-auto mb-4 object-cover rounded"
            />
            <div class="absolute">
                <h1 class="text-5xl font-bold tracking-tight mb-2">Flying In <span class="block text-3xl font-normal">{leadStory.title}</span></h1>
                <p>By {leadStory.author} â€” {leadStory.date}</p>
            </div>
            
        </article>

        <ul class="mt-4 space-y-1 text-lg text-gray-300">
          <li>Wings of the Iditarod</li>
          <li>Disneyland for pilots</li>
          <li>Budget Pilot Gift Guide</li>
        </ul>
      </div>

      <!-- Featured Stories -->
      <section class="bg-gray-800 p-6 rounded-md">
        <h2 class="text-pink-500 uppercase tracking-widest text-sm mb-4">Featured Stories</h2>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">

               {featuredStories.map(story => (
                    <article class="!mt-2">
                        <h3 class="mb-1 hover:underline"><a href="/blog-post/${story.slug}">{story.title}</a></h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
                        {(story.excerpt ?? '')
                            .replace(/<[^>]*>/g, '') // strip HTML
                            .split(' ')              // break into words
                            .slice(0, 30)            // grab first 30 words
                            .join(' ') + '...'}
                        </p>

                        <a href={`/blog-post/${story.slug}`} class="text-sm text-blue-600 hover:underline">Read more</a>
                    </article>
                ))}
        </div>
      </section>
    </section>
  </div>
</Layout>
