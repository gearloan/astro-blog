---
import Layout from '../layouts/Layout.astro';
import HomeHero from "../components/homepage/HomeHero.astro";
import WhyChoose from "../components/homepage/WhyChoose.astro";
import JoinCtaBand from "../components/homepage/JoinCtaBand.astro";
import EverythingYouNeed from "../components/homepage/EverythingYouNeed.astro";
import NewsSection from "../components/homepage/NewsSection.astro";
import PublicationsGrid from "../components/homepage/PublicationsGrid.astro";
import StatsStrip from "../components/homepage/StatsStrip.astro";



const stats = [
  { kpi: "85+", label: "Years of advocacy" },
  { kpi: "300K+", label: "Active members" },
  { kpi: "90%", label: "Accident reduction" },
  { kpi: "24/7", label: "Member support" },
];
---

<Layout section="home">
  <HomeHero
    title="Freedom to Fly"
    sub="Join 300,000+ pilots who trust AOPA to protect general aviation, provide world‑class support, and fight for your freedom to fly."
    image={{
      alt: "High‑wing trainer flying over countryside at golden hour",
      mobile: {
        jpg:  "/images/home/hero-cessna-mobile.jpg"
      },
      desktop: {
        jpg:  "/images/home/hero-cessna-desktop.jpg"
      }
    }}
    primary={{ label: "Become a Member" }}
    secondary={{ label: "Member Login" }}
  />
  

  <StatsStrip items={stats} overlap={true} />

  <WhyChoose
    heading="WHY 300,000+ PILOTS CHOOSE AOPA"
    blurb="From student pilots to airline captains, AOPA members get the protection, advocacy, and support they need to fly with confidence."
    items={[
      { title: "Advocacy", copy: "Protecting your freedom to fly.", img: "/images/benefits/advocacy.jpg" },
      { title: "Training & Safety", copy: "Air Safety Institute resources.", img: "/images/benefits/safety.jpg" },
      { title: "Member Benefits", copy: "Insurance, products, discounts.", img: "/images/benefits/benefits.jpg" },
      { title: "Community", copy: "Events and pilot network.", img: "/images/benefits/community.jpg" },
    ]}
  />

  <JoinCtaBand
    title={["READY TO", "JOIN THE", "FLIGHT?"]}
    copy="Every pilot needs AOPA. Every voice matters. Together, we’re stronger."
    primary={{ label: "VIEW MEMBERSHIP PLANS" }}
    secondary={{ label: "VIEW MEMBERSHIP PLANS" }}
    toneClass="bg-[#0e4b5f] text-white"  
  />

  <EverythingYouNeed
    title="Everything You Need to Fly"
    strapline={[
      "From your first lesson",
      "To your last landing,",
      "AOPA is with you every step of the way."
    ]}
    bg={{
      alt: "Snow‑capped mountains",
      mobile:  { jpg: "/images/bg/mountains-mobile.jpg" },
      desktop: { jpg: "/images/bg/mountains-desktop.jpg" }
    }}
    items={[
      { title: "Flight Training Resources", copy: "Comprehensive guides, training materials, and scholarship opportunities for aspiring pilots." },
      { title: "Safety & Education", copy: "World‑class safety programs, weather resources, and continuing education for all pilots." },
      { title: "Pilot Protection Services", copy: "Legal support, medical certification help, and advocacy when you need it most." },
      { title: "Government Advocacy", copy: "Fighting for your rights in Congress, with federal agencies, and at the state level." },
    ]}
  />

  <NewsSection
    title="AVIATION NEWS"
    lead={{
      img: "/images/news/lead-ga-safety.jpg",
      alt: "Pilot at preflight",
      headline: "GA Safety Trends: 2022–2025",
      href: "#"
    }}
    side={[
      { img: "/images/news/solo-checklist.jpg", alt: "Ramp scene", headline: "Solo Flight Checklist Revisited", href: "#" },
      { img: "/images/news/storms.jpg", alt: "Towering cumulus", headline: "Lessons from Near‑Miss Incidents", href: "#" }
    ]}
    category={{
      label: "ADVOCACY",
      items: [
        { headline: "Lessons from Near‑Miss Incidents", href: "#" },
        { headline: "Lessons from Near‑Miss Incidents", href: "#" },
        { headline: "Lessons from Near‑Miss Incidents", href: "#" },
        { headline: "Lessons from Near‑Miss Incidents", href: "#" }
      ]
    }}
  />
  <PublicationsGrid
    title="AOPA PUBLICATIONS"
    items={[
      {
        name: "PILOT MAGAZINE",
        color: "text-sky-400",
        img: "/images/covers/pilot.jpg",
        href: "/pilot"
      },
      {
        name: "PILOT TURBINE MAGAZINE",
        color: "text-yellow-200",
        img: "/images/covers/turbine.jpg",
        href: "/turbine"
      },
      {
        name: "FLIGHT TRAINING MAGAZINE",
        color: "text-fuchsia-300",
        img: "/images/covers/flight-training.jpg",
        href: "/flight-training"
      },
    ]}
  />
</Layout>
