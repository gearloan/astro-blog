---
// Products component
---

<section class="py-16" style="background: linear-gradient(to bottom, #0a2d3a, oklch(39.1% 0.09 240.876));">
  <!-- Header Section -->
  <div class="py-16">
    <div class="max-w-6xl mx-auto px-4 md:px-8">
      <h2 class="text-3xl md:text-4xl font-heading text-white text-center uppercase tracking-wide">
        Lorem Ipsum AOPA's Dolor
      </h2>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="max-w-6xl mx-auto px-4 md:px-32 -mt-8 relative z-10">
    <div class="rounded-2xl">
      
      <!-- Rusty Pilots Section -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0 items-stretch md:min-h-[300px] my-4 md:my-0 rounded-lg md:rounded-none md:rounded-t-2xl" style="background-color: #F4F3EA;">
        <!-- Text Panel -->
        <div class="p-8 space-y-6 flex flex-col justify-center text-center">
          <h3 class="text-xl md:text-2xl font-ui text-aopa-dkblue">Rusty Pilots</h3>
          <p class=" text-gray-700 leading-relaxed">
            Knock off the rust. If you've been out of the flight deck for a while, we'll help you get back in.
          </p>
          <button class="border-2 border-aopa-dkblue bg-white text-aopa-dkblue px-6 py-3 rounded-lg font-ui font-medium hover:bg-blue-50 transition-colors w-fit mx-auto">
            Get Started
          </button>
        </div>
        
        <!-- Image Panel -->
        <div class="relative h-[300px] md:h-full">
          <img
            src="/images/home/index-a/rusty.jpg"
            alt="Pilot in cockpit with BOSE headset"
            class="w-full h-full object-cover rounded-b-lg md:rounded-none md:rounded-tr-2xl"
          />
        </div>
      </div>

      <!-- Pilot Clubs Section -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0 items-stretch md:min-h-[300px] my-4 md:my-0 rounded-lg md:rounded-none" style="background-color: #F4F3EA;">
        <!-- Image Panel -->
        <div class="relative h-[300px] md:h-full order-2 md:order-1">
          <img
            src="/images/home/index-a/clubs.jpg"
            alt="Red and white airplane on runway"
            class="w-full h-full object-cover rounded-b-lg md:rounded-none"
          />
        </div>
        
        <!-- Text Panel -->
        <div class="p-8 space-y-6 flex flex-col justify-center text-center order-1 md:order-2">
          <h3 class="text-xl md:text-2xl font-ui text-aopa-dkblue">Pilot Clubs</h3>
          <p class="text-gray-700 leading-relaxed">
            Looking for affordable entry to aircraft ownership? Learn about Flying Clubs here.
          </p>
          <button class="border-2 border-aopa-dkblue bg-white text-aopa-dkblue px-6 py-3 rounded-lg font-ui font-medium hover:bg-blue-50 transition-colors w-fit mx-auto">
            Get Started
          </button>
        </div>
      </div>

      <!-- AOPA Travel Section -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0 items-stretch md:min-h-[300px] my-4 md:my-0 rounded-lg md:rounded-none md:rounded-b-2xl" style="background-color: #F4F3EA;">
        <!-- Text Panel -->
        <div class="p-8 space-y-6 flex flex-col justify-center text-center">
          <h3 class="text-xl md:text-2xl font-ui text-aopa-dkblue">AOPA Travel</h3>
          <p class="text-gray-700 leading-relaxed">
            Benefits designed to offer you choices wherever and whenever you travel.
          </p>
          <button class="border-2 border-aopa-dkblue bg-white text-aopa-dkblue px-6 py-3 rounded-lg font-ui font-medium hover:bg-blue-50 transition-colors w-fit mx-auto">
            Get Started
          </button>
        </div>
        
        <!-- Image Panel -->
        <div class="relative h-[300px] md:h-full">
          <img
            src="/images/home/index-a/travel.jpg"
            alt="Blue airplane flying over coastal landscape"
            class="w-full h-full object-cover rounded-b-lg md:rounded-none md:rounded-br-2xl"
          />
        </div>
      </div>

    </div>
  </div>
</section>
