---
// News component
---

<section class="py-8 md:py-16 bg-white">
  <div class="max-w-6xl mx-auto px-2 md:px-8">
    <!-- News Container -->
    <div class="p-4 md:p-8">
      
      <!-- Header -->
      <div class="mb-6 md:mb-8">
        <h2 class="text-3xl md:text-4xl font-heading text-aopa-dkblue uppercase mb-4">Aviation News</h2>
        <div class="w-full h-px bg-gray-800"></div>
      </div>

      <!-- News Content -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 mb-6 md:mb-8">
        
        <!-- Left Column - News Items -->
        <div class="md:col-span-2 space-y-4 md:space-y-6">
          
          <!-- News Item 1 -->
          <div class="flex gap-4">
            <div class="w-64 h-48 flex-shrink-0">
              <img 
                src="/images/home/news-1.jpg" 
                alt="Aviation news story" 
                class="w-full h-full object-cover rounded"
              />
            </div>
            <div class="flex-1">
              <h4 class="text-aopa-dkblue font-serifBold text-3xl capitalize">It's all about the speed</h4>
              <p class="text-aopa-dkblue font-serifItalic text-xl">Stylish Risen SuperVeloce V-tail</p>

            </div>
          </div>

          <!-- News Item 2 -->
          <div class="flex gap-4">
            <div class="w-64 h-48 flex-shrink-0">
              <img 
                src="/images/home/news-2.jpg" 
                alt="Aviation news story" 
                class="w-full h-full object-cover rounded"
              />
            </div>
            <div class="flex-1">
              <h4 class="text-aopa-dkblue font-serifBold text-3xl capitalize">Calling all chili heads</h4>
              <p class="text-aopa-dkblue font-serifItalic text-xl">Fly, eat, repeat</p>
            </div>
          </div>

          <!-- News Item 3 -->
          <div class="flex gap-4">
            <div class="w-64 h-48 flex-shrink-0">
              <img 
                src="/images/home/news-3.jpg" 
                alt="Aviation news story" 
                class="w-full h-full object-cover rounded"
              />
            </div>
            <div class="flex-1">
               <h4 class="text-aopa-dkblue font-serifBold text-3xl capitalize">Training Tuesday Tip</h4>
               <p class="text-aopa-dkblue font-serifItalic text-xl">Quell queasy feelings</p>
            </div>
          </div>

        </div>

        <!-- Right Column - Featured Image -->
        <div class="md:col-span-1">
          <div class="flex flex-col items-center space-y-2">
            <div class="w-[300px] h-[250px] bg-gray-200 border border-gray-300 flex items-center justify-center">
              <span class="text-gray-500 text-sm">300x250 Ad Space</span>
            </div>
            <p class="text-xs text-gray-500 uppercase tracking-wide">Advertisement</p>
          </div>
        </div>

      </div>

      <!-- Call to Action Button -->
      <div class="text-center">
        <button class="bg-aopa-ltblue text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-600 transition-colors">
          Visit Our News Section
        </button>
      </div>

    </div>
  </div>
</section>
