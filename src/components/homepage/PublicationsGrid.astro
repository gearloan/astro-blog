---
/**
 * PublicationsGrid.astro
 *
 * Props:
 *  - title: string
 *  - items: Array<{
 *      name: string
 *      href?: string
 *      color?: string        // Tailwind class for the name color (e.g., "text-sky-400")
 *      img: string           // cover art (or placeholder)
 *      alt?: string
 *    }>
 */
const {
  title = "AOPA PUBLICATIONS",
  items = [
    { name: "PILOT MAGAZINE",         color: "text-sky-400",    img: "/images/covers/pilot.jpg" },
    { name: "PILOT TURBINE MAGAZINE", color: "text-yellow-200", img: "/images/covers/turbine.jpg" },
    { name: "FLIGHT TRAINING MAGAZINE", color: "text-fuchsia-300", img: "/images/covers/flight-training.jpg" },
  ],
} = Astro.props;
---

<section class="bg-[#2d2d2d] text-white">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-10 sm:py-12">
    <h2 class="text-center font-heading text-3xl sm:text-4xl font-extrabold tracking-wide">
      {title}
    </h2>

    <div class="mt-8 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {items.slice(0,3).map((m) => (
        <article class="group">
          <h3 class={`mb-4 text-center font-heading text-2xl font-extrabold tracking-wide uppercase ${m.color ?? "text-sky-300"}`}>
            {m.name}
          </h3>

          <a href={m.href ?? "#"} class="block overflow-hidden rounded-md ring-1 ring-white/10 transition-shadow duration-200 hover:ring-white/25">
            <div class="aspect-[3/4] w-full bg-black">
              <img
                src={m.img}
                alt={m.alt ?? m.name}
                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
                loading="lazy"
              />
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
