---
interface Item { title: string; copy?: string; img?: string; alt?: string }
const {
  heading = "WHY 300,000+ PILOTS CHOOSE AOPA",
  blurb = "From student pilots to airline captains, AOPA members get the protection, advocacy, and support they need to fly with confidence.",
  items = [
    { title: "Advocacy", copy: "Protecting your freedom to fly at local and federal levels." },
    { title: "Training & Safety", copy: "Trusted resources, from Rusty Pilot to Air Safety Institute." },
    { title: "Member Benefits", copy: "Insurance, products, and discounts built for pilots." },
    { title: "Community", copy: "Events, mentoring, and a network of pilots nationwide." },
  ],
} = Astro.props as { heading?: string; blurb?: string; items?: Item[] };
---

<section class="bg-white">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-12 sm:py-14">
    <!-- Top row -->
    <div class="grid gap-6 md:grid-cols-2">
      <h2 class="font-heading text-3xl sm:text-4xl font-extrabold tracking-tight text-slate-900">
        {heading}
      </h2>
      <p class="text-slate-700 max-w-prose">
        {blurb}
      </p>
    </div>

    <!-- Cards -->
    <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {items.slice(0, 4).map((it) => (
        <article class="rounded-2xl bg-white p-5 shadow-sm ring-1 ring-slate-200">
          <div class="aspect-[4/3] w-full rounded-xl bg-slate-100 ring-1 ring-slate-200/60 mb-4 overflow-hidden">
            {it.img ? (
              <img src={it.img} alt={it.alt ?? it.title} class="h-full w-full object-cover" loading="lazy" />
            ) : null}
          </div>
          <h3 class="text-lg font-semibold text-slate-900">{it.title}</h3>
          {it.copy && <p class="mt-2 text-sm leading-6 text-slate-600">{it.copy}</p>}
        </article>
      ))}
    </div>
  </div>
</section>
