---
// src/components/MostRead.astro
const { posts } = Astro.props;

---
<section>
  <h3 class="text-sm font-bold tracking-widest uppercase mb-2">Most Read</h3>
  <ul class="space-y-4">
    {posts.map((post) => (
      <li>
        <a href={`/blog-post/${post.slug}`} class="block text-sm leading-snug hover:underline">
          <span set:html={post.title} />
        </a>
      </li>
    ))}
  </ul>
</section>
