---
// Publications component
---

<section class="relative w-full min-h-screen" style="background: linear-gradient(rgb(242, 242, 242) 0%, rgb(139, 168, 189) 100%);">
  <!-- Top Section - Header -->
  <div class="pt-20 pb-12">
    <div class="text-center">
      <h1 class="text-3xl md:text-4xl font-heading uppercase text-slate-800 mb-2">AOPA Publications</h1>
      <h2 class="text-xl md:text-2xl font-bold text-slate-800 mb-2">
        Writing for
        Adventurers
      </h2>
      
      <!-- Navigation Tabs -->

    </div>
  </div>

  <!-- Bottom Section - Magazine Cards -->
  <div class="pb-20 px-4 md:px-8">
    <div class="w-full flex justify-center">
      <!-- Desktop: Three Panel Layout -->
      <div class="hidden md:flex h-[600px] w-[80vw] max-w-6xl">
        <!-- Panel 1 - Pilot Magazine -->
        <div class="flex-1 relative overflow-hidden transition-all duration-500 ease-in-out hover:flex-[2] cursor-pointer group">
          <img
            src="/images/home/pilot-mag.jpg"
            alt="Pilot Magazine"
            class="w-full h-full object-cover"
          />
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
          <!-- Text Overlay -->
          <div class="absolute bottom-6 left-6 text-white">
            <div class="text-5xl font-blockquote text-aopa-ltblue mb-2">01</div>
            <div class="text-lg font-medium">Pilot <br>Magazine</div>
          </div>
          <!-- Expanded Content (Hidden by default) -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-200 group-hover:delay-0">
            <div class="flex items-center justify-end h-full pr-8">
            <div class="text-white w-80 backdrop-blur-sm rounded-2xl p-6" style="background-color: rgba(10, 72, 99, 0.7);">
              <h3 class="text-4xl uppercase font-blockquote mb-4 text-blue-300">Pilot Magazine</h3>
              <p class="text-sm mb-6 leading-relaxed">Monthly insights for general aviation pilots. Stay informed with the latest industry news, safety updates, and pilot stories.</p>
              <button class="bg-aopa-ltblue text-slate-100 hover:text-slate-800 px-6 py-3 rounded-full text-sm font-medium hover:bg-cyan-200 transition-colors">
                Browse Issues
              </button>
            </div>
            </div>
          </div>
        </div>

        <!-- Panel 2 - Pilot Turbine -->
        <div class="flex-1 relative overflow-hidden transition-all duration-500 ease-in-out hover:flex-[2] cursor-pointer group">
          <img
            src="/images/home/turbine-mag.jpg"
            alt="Pilot Turbine Magazine"
            class="w-full h-full object-cover"
          />
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
          <!-- Text Overlay -->
          <div class="absolute bottom-6 left-6 text-white">
            <div class="text-5xl font-blockquote text-aopa-ltblue mb-2">02</div>
            <div class="text-lg font-medium">Pilot Turbine <br> Magazine</div>
          </div>
          <!-- Expanded Content (Hidden by default) -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-200 group-hover:delay-0">
            <div class="flex items-center justify-end h-full pr-8">
            <div class="text-white w-80 backdrop-blur-sm rounded-2xl p-6" style="background-color: rgba(10, 72, 99, 0.7);">
              <h3 class="text-4xl uppercase font-blockquote mb-4 text-blue-300">Pilot Turbine Magazine</h3>
              <p class="text-sm mb-6 leading-relaxed">Advanced content for turbine aircraft pilots. Expert insights on high-performance aircraft, systems, and advanced flight techniques.</p>
              <button class="bg-aopa-ltblue text-slate-100 hover:text-slate-800 px-6 py-3 rounded-full text-sm font-medium hover:bg-cyan-200 transition-colors">
                Browse Issues
              </button>
            </div>
            </div>
          </div>
        </div>

        <!-- Panel 3 - Flight Training -->
        <div class="flex-1 relative overflow-hidden transition-all duration-500 ease-in-out hover:flex-[2] cursor-pointer group">
          <img
            src="/images/home/flight-training-mag.jpg"
            alt="Flight Training Magazine"
            class="w-full h-full object-cover"
          />
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
          <!-- Text Overlay -->
          <div class="absolute bottom-6 left-6 text-white">
            <div class="text-5xl font-blockquote text-aopa-ltblue mb-2">03</div>
            <div class="text-lg font-medium">Flight Training <br> Magazine</div>
          </div>
          <!-- Expanded Content (Hidden by default) -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-200 group-hover:delay-0">
            <div class="flex items-center justify-end h-full pr-8">
            <div class="text-white w-80 backdrop-blur-sm rounded-2xl p-6" style="background-color: rgba(10, 72, 99, 0.7);">
              <h3 class="text-4xl uppercase font-blockquote mb-4 text-blue-300">Flight Training Magazine</h3>
              <p class="text-sm mb-6 leading-relaxed">Essential resources for student pilots. Learn the fundamentals of flight training, ground school, and certification processes.</p>
              <button class="bg-aopa-ltblue text-slate-100 hover:text-slate-800 px-6 py-3 rounded-full text-sm font-medium hover:bg-cyan-200 transition-colors">
                Browse Issues
              </button>
            </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile: Stacked Layout -->
      <div class="md:hidden w-full max-w-sm space-y-6">
        <!-- Magazine 1 - Pilot Magazine -->
        <div class="bg-white/90 backdrop-blur-sm rounded-lg overflow-hidden">
          <img
            src="/images/home/pilot-mag.jpg"
            alt="Pilot Magazine"
            class="w-full h-64 object-cover"
          />
          <!-- Text Content Below Image -->
          <div class="p-4">
            <div class="flex items-center gap-3 mb-3">
              <div class="text-2xl font-bold text-aopa-ltblue">01</div>
              <div class="text-lg font-medium text-slate-800">Pilot Magazine</div>
            </div>
            <p class="text-sm text-slate-700 mb-4 leading-relaxed">Monthly insights for general aviation pilots. Stay informed with the latest industry news, safety updates, and pilot stories.</p>
            <button class="bg-aopa-ltblue text-slate-100 hover:text-slate-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-cyan-200 transition-colors">
              Read More
            </button>
          </div>
        </div>

        <!-- Magazine 2 - Pilot Turbine -->
        <div class="bg-white/90 backdrop-blur-sm rounded-lg overflow-hidden">
          <img
            src="/images/home/turbine-mag.jpg"
            alt="Pilot Turbine Magazine"
            class="w-full h-64 object-cover"
          />
          <!-- Text Content Below Image -->
          <div class="p-4">
            <div class="flex items-center gap-3 mb-3">
              <div class="text-2xl font-bold text-aopa-ltblue">02</div>
              <div class="text-lg font-medium text-slate-800">Pilot Turbine Magazine</div>
            </div>
            <p class="text-sm text-slate-700 mb-4 leading-relaxed">Advanced content for turbine aircraft pilots. Expert insights on high-performance aircraft, systems, and advanced flight techniques.</p>
            <button class="bg-aopa-ltblue text-slate-100 hover:text-slate-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-cyan-200 transition-colors">
              Read More
            </button>
          </div>
        </div>

        <!-- Magazine 3 - Flight Training -->
        <div class="bg-white/90 backdrop-blur-sm rounded-lg overflow-hidden">
          <img
            src="/images/home/flight-training-mag.jpg"
            alt="Flight Training Magazine"
            class="w-full h-64 object-cover"
          />
          <!-- Text Content Below Image -->
          <div class="p-4">
            <div class="flex items-center gap-3 mb-3">
              <div class="text-2xl font-bold text-aopa-ltblue">03</div>
              <div class="text-lg font-medium text-slate-800">Flight Training Magazine</div>
            </div>
            <p class="text-sm text-slate-700 mb-4 leading-relaxed">Essential resources for student pilots. Learn the fundamentals of flight training, ground school, and certification processes.</p>
            <button class="bg-aopa-ltblue text-slate-100 hover:text-slate-800 px-4 py-2 rounded-full text-sm font-medium hover:bg-cyan-200 transition-colors">
              Read More
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
