
---
import { fetchPosts } from '../lib/fetchPosts.js';
const posts = await fetchPosts();
---

<h1>Latest Posts</h1>
<ul>
  {posts.map((post) => (
    <li>
      <img src={post.featured_image} alt={post.title.rendered} />
      <h2>
        <a href={post.link} class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer" set:html={post.title.rendered}></a>
      </h2>
      <p set:html={post.excerpt.rendered}></p>
    </li>
  ))}
</ul>
